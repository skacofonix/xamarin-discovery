<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:beatbox="clr-namespace:Beatbox;assembly=Beatbox"
             xmlns:converters="clr-namespace:Beatbox.Converters;assembly=Beatbox"
             x:Class="Beatbox.App">

    <Application.Resources>
        <ResourceDictionary>
            <converters:DumbConverter x:Key="DumbConverter" />
            <converters:SoundStatusColorConverter x:Key="SoundStatusColorConverter" />
            <converters:SoundStatusTextConverter x:Key="SoundStatusTextConverter" />
        </ResourceDictionary>
    </Application.Resources>

</Application>